function de-archive () {
# remove leading character string (exact 10 characters) that could be used as unique identifier for cluster jobs
    files=( $@ )
    for i in "${files[@]}"; do
        new_name=${i#*.}
        uid=${i%%.*}
        if [ ${#uid} -eq 10 ]
        then
            if ! [[ -f $new_name ]]
            then
                mv $i $new_name;
            fi
        fi
    done
}

