# Don't print a new line at the start of the prompt
add_newline = false

# Which is equivalent to
format = """
$username\
$hostname\
$shlvl\
$singularity\
$directory\
$git_branch\
$git_commit\
$git_state\
$docker_context\
$julia\
$python\
$conda\
$memory_usage\
$aws\
$gcloud\
$env_var\
$cmd_duration\
$custom\
$line_break\
$jobs\
$battery\
$time\
$status\
$character"""

[line_break]
disabled = true

[cmd_duration]
min_time = 432000
disabled = false

[directory]
format = " [$path]($style)[$read_only]($read_only_style)"
fish_style_pwd_dir_length = 3
truncation_length = 3

[hostname]
ssh_only = false
format = "at [$hostname](bold dimmed green):"
trim_at = "."
disabled = false

[username]
style_user = "white bold"
style_root = "black bold"
format = "[$user]($style) "
disabled = false
show_always = true

[aws]
format = ''
disabled = true

[conda]
format = " [$symbol$environment](dimmed green) "
ignore_base = false

[docker_context]
format = "via [ğŸ‹ $context](blue bold)"

[gcloud]
disabled = true

[git_branch]
symbol = "ğŸŒ± "
format = " on [$symbol$branch]($style) "
truncation_length = 12

[julia]
symbol = "âˆ´ "

[singularity]
format = '[ğŸ“¦ \[$env\]]($style) '
